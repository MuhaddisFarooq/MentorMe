<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#cce7f8">

    <TextView
        android:id="@+id/mentorme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mentorme"
        android:textSize="48sp"
    android:textColor="#ffa726"
    android:fontFamily="@font/roboto_medium"
    android:layout_centerInParent="true"
    android:layout_marginBottom="3dp"/>

    <TextView
        android:id="@+id/conn_ask_learn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="connect. ask. learn."
        android:textSize="24sp"
        android:textColor="#000000"
        android:fontFamily="@font/roboto_light"
        android:layout_below="@id/mentorme"
        android:layout_alignParentStart="true"
        android:paddingStart="98dp"
    />

    <Button
        android:id="@+id/btnGetStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Started"
        android:backgroundTint="#147076"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="32dp"/>


</RelativeLayout>
